<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white">
        <div class=" p-5">
            <div class="w-full flex justify-end gap-5">
                <a href="/profile/upload" class="bg-purple-600 p-1 text-white rounded-md">Update Profile</a>
                <a href="/logout" class="bg-purple-600 p-1 text-white rounded-md">Logout</a>
            </div>
            <div class="flex gap-5 h-[100px] items-center">
                <div class="w-12 h-12 rounded-md">
                    <img class="w-full h-full object-cover border-1 border-purple-600 rounded-[50%]" src="/images/uploads/<%= puser.profilepic %>" alt="">
                </div>
                <h1 class="text-2xl font-bold">Hello! <%=puser.name%> üëãüèª,</h1>
            </div>
            <h2 class="pt-2">You can create a new post here</h2>
            <form action="/post" method="post" class="flex flex-col">
                <textarea class="m-5 p-2 border-2 border-zinc-500 w-[500px] h-[100px] rounded-md" placeholder="Enter your post" name="content" id="" ></textarea>
                <input type="submit" value="Create post" class="ml-5 bg-purple-600 p-1 text-white rounded-md w-[100px]">
            </form>
            <div class="posts">
                <h3 class="m-5 text-2xl font-bold">You Posts</h3>
                <div class="postcontainer flex flex-col gap-5">

                    <% users.forEach(function(user){%>
                        <%user.posts.forEach(function(post){%>
                            <div class="post border-1 border-zinc-500 w-1/3 p-3 rounded-md bg-zinc-800">
                            <h4 class="text-blue-600 mb-2"><%= user.username %></h4>
                            <p class="text-[15px]"><%= post.content %></p>
                            <%if(post.likes.length > 0){%>
                                <div class="mt-3 mb-[-20px] text-[12px]"><%=post.likes.length%> Likes</div>
                            <%}%>
                            <div class="buttons flex gap-5 mt-5">
                                <a href="/like/<%=post._id%>" class="text-blue-600">Like</a>
                                <%if(user.email === puser.email){%>
                                    <a href="/edit/<%=post._id%>" class="text-pink-600">Edit</a>
                                <%}%>
                            </div>
                        </div>
                        <%})%>
                    <%})%>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>